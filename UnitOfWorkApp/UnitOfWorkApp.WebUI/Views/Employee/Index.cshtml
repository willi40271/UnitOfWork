@model UnitOfWorkApp.WebUI.Models.Employee.IndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Last</th>
        <th>First</th>
        <th>Title</th>
        <th></th>
    </tr>

@foreach (var item in Model.Employees) {
    <tr>
        <td>
            @item.LastName
        </td>
        <td>
            @item.FirstName
        </td>
        <td>
            @item.Title
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeID })
        </td>
    </tr>
}

</table>
